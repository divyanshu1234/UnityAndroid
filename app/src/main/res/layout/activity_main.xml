<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ghostvr.unityandroid.MainActivity">

    <Button
        android:id="@+id/b_get_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Point"
        android:layout_above="@+id/b_get_quat"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:onClick="getPoint"/>

    <Button
        android:id="@+id/b_get_quat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Quat"
        android:layout_alignStart="@+id/b_get_points"
        android:layout_centerVertical="true"
        android:onClick="getQuat"/>
</RelativeLayout>
